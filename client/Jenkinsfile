pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('yasirwilliams-dockerhub')
    }

    stages {
        stage('pull code from git'){
            steps {
                git branch: 'main', url: 'https://github.com/yasirw212/booking-app.git'
            }
        }

        stage('Build'){
            steps {
                sh ('echo $DOCKERHUB_CREDENTIALS_USR')
                sh ('docker build -t yasirwilliams/booking-app:frontend-v1.0.1 ./client/')
            }
        }

        stage('Login'){
            steps {
                sh ('echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin')
            }
        }

        stage('Push'){
            steps {
                sh ('docker push yasirwilliams/booking-app:frontend-v1.0.1')
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}
